{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="cards_list">
        <div class='series_list'>
            <h1 class="mt-0">{{ program.id }} / {{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
                <div class='poster_field'>
                    <img class="poster" src="{{program.poster}}" alt="{{ program.title }} poster" style="width: 20%; margin-left: 1rem; margin-bottom: 1rem">
                </div>
                <h1>Liste des saisons disponibles :</h1>
                {% for season in program.seasons %}
                    <div class='series_list'>
                        <ul>
                            <li class='series_list_info'>
                                <a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Saison - {{ season.number }}</a>
                            </li>
                        </ul>
                    </div>
                {% else %}
                    Aucune saisons trouvée.
                {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}